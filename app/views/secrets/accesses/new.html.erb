<div class="flex flex-wrap w-full">
  <div class="w-full md:w-1/2 lg:w-1/3 p-4">
    <div id='secret'>
      <% if @secret.nil? %>
        <%= render 'shared/error_message', information: 'Secret has been burned or accessed' %>
      <% else %>
        <%= render 'form', secret: @secret %>
      <% end %>
    </div>
  </div>
  <div class="w-full md:w-1/2 lg:w-2/3 p-4 md:order-last">
    <%= render 'shared/how_it_works' %>
  </div>
</div>