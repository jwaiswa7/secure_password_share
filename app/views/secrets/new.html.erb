
<%= form_with model: @secret, html: {class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 max-w-lg'} do |form| %>
  <h1 class="text-3xl font-bold text-center mb-4">Create a new secret</h1>
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
        Secret information
    </label>
    <%= form.text_area :information, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
      Expiry time in minutes
    </label>
    <%= form.select :life_time, Secret::EXPIRY.map{|time| [distance_of_time_in_words(Time.now, Time.now + time.minutes), time]}, {}, { class: "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" } %>
  </div>
  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
      Secret Code
    </label>
    <%= form.text_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="mb-4">
  <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
    Confirm Secret Code
  </label>
    <%= form.text_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <%= form.submit 'Encrypt', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
<% end %>
<div id='errors'></div>
<div id="secret">
</div>