<%= form_with url: secret_burn_path(secret), method: 'post' do |form| %>
  <div class="flex items-center justify-between">
    <span class="text-gray-700 text-sm">Once burned, the secret will be deleted and cannot be recovered</span>
  </div>

  <div class="mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
      Secret Code
    </label>
    <%= form.text_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="p-2 flex">
    <div class="w-1/2">
      <%= form.submit 'Burn', class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
    <div class="w-1/2 flex justify-end">
      <%= link_to 'New Secret', new_secret_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>
  </div>
<% end %>